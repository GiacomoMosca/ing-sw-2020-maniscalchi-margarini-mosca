<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="720.0" maxWidth="1280.0" pickOnBounds="true" prefHeight="720.0" prefWidth="1280.0" stylesheets="@title.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.TitleController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/title/titleScreen.png" />
         </image>
      </ImageView>
      <StackPane AnchorPane.bottomAnchor="16.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <ImageView fitHeight="65.0" onMousePressed="#pressed" onMouseReleased="#released" preserveRatio="true">
               <image>
                  <Image url="@../assets/title/btn_blue.png" />
               </image>
            </ImageView>
            <ImageView fx:id="playButton" fitHeight="65.0" preserveRatio="true" visible="false">
               <image>
                  <Image url="@../assets/title/btn_blue_pressed.png" />
               </image>
            </ImageView>
            <Text fx:id="playText" mouseTransparent="true" text="Let's Play">
            <StackPane.margin>
                <Insets top="-14.0" />
            </StackPane.margin>
            </Text>
            <Text fx:id="playTextPressed" mouseTransparent="true" text="Let's Play" visible="false">
               <StackPane.margin>
                  <Insets top="-8.0" />
               </StackPane.margin>
            </Text>
         </children>
      </StackPane>
   </children>
</AnchorPane>
