<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="720.0" maxWidth="1280.0" pickOnBounds="true" prefHeight="720.0" prefWidth="1280.0" stylesheets="@logIn.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.LoginController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/cardSelect/cardSelect_bg.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/cardSelect/cardSelect_frame.png" />
         </image>
      </ImageView>
      <TextField fx:id="textField" layoutX="560.0" layoutY="345.0" promptText="Server IP">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <StackPane layoutX="750.0" layoutY="335.0" prefHeight="50.0" prefWidth="100.0">
         <children>
            <ImageView fx:id="connectButton" fitHeight="150.0" fitWidth="130.0" onMousePressed="#pressed" onMouseReleased="#released" pickOnBounds="true" preserveRatio="true" visible="true">
               <image>
                  <Image url="@../assets/logIn/btn_green.png" />
               </image>
            </ImageView>
            <ImageView fx:id="connectButtonPressed" fitHeight="150.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" visible="false">
               <image>
                  <Image url="@../assets/logIn/btn_green_pressed.png" />
               </image>
            </ImageView>
            <Text fx:id="connectText" mouseTransparent="true" strokeType="OUTSIDE" strokeWidth="0.0" text="Connect">
               <StackPane.margin>
                  <Insets top="-5.0" />
               </StackPane.margin>
            </Text>
            <Text fx:id="connectTextPressed" mouseTransparent="true" strokeType="OUTSIDE" strokeWidth="0.0" text="Connect" visible="false">
               <StackPane.margin>
                  <Insets top="-2.0" />
               </StackPane.margin>
            </Text>
         </children>
      </StackPane>
      <Text fx:id="request" layoutX="333.0" layoutY="367.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Server IP address:" />
   </children>
</AnchorPane>
